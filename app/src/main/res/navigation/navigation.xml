<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/Movies">

    <fragment
        android:id="@+id/Movies"
        android:name="com.example.simplemovies.homescreen.HomescreenFragment"
        android:label="Movies">
        <action
            android:id="@+id/action_homescreen_to_detailscreen"
            app:destination="@+id/MovieDetails" />
        <action
            android:id="@+id/action_Movies_to_searchLanding"
            app:destination="@id/SearchLanding" />
    </fragment>
    <fragment
        android:id="@+id/MovieDetails"
        android:name="com.example.simplemovies.detailscreen.DetailscreenFragment"
        android:label="Movie Details" >
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="movie" />
        <action
            android:id="@+id/action_MovieDetails_to_castFragment"
            app:destination="@id/castFragment" />
    </fragment>
    <fragment
        android:id="@+id/PickAMovie"
        android:name="com.example.simplemovies.moviepicker.MoviePickerFragment"
        android:label="Pick A Movie"
        tools:layout="@layout/fragment_movie_picker" >
        <action
            android:id="@+id/action_PickAMovie_to_MovieDetails"
            app:destination="@id/MovieDetails"
            app:popUpTo="@+id/Movies" />
    </fragment>
    <fragment
        android:id="@+id/SearchLanding"
        android:name="com.example.simplemovies.search.SearchLanding"
        android:label="Search results"
        tools:layout="@layout/fragment_search_landing">
        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_SearchLanding_to_MovieDetails"
            app:destination="@id/MovieDetails" />
    </fragment>
    <fragment
        android:id="@+id/Experimental"
        android:name="com.example.simplemovies.experimental.Experimental"
        android:label="Discover"
        tools:layout="@layout/fragment_experimental">
        <action
            android:id="@+id/action_experimental_to_MovieDetails"
            app:destination="@id/MovieDetails"
            app:popUpTo="@+id/Movies">
            <argument
                android:name="type"
                app:argType="string"
                />
        </action>
    </fragment>
    <fragment
        android:id="@+id/castFragment"
        android:name="com.example.simplemovies.cast.CastFragment"
        android:label="CastFragment" >
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="type"
            app:argType="string" />
    </fragment>
</navigation>