<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <!-- Background color of spinner -->
                    <solid android:color="@color/white"></solid>
                    <!--rounded edges-->
                    <corners android:radius="3dp"></corners>

                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />

                    <!--Border-->
                    <stroke android:width="1dp" android:color="@color/darkGray" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@android:drawable/arrow_down_float"/>
            </item>
        </layer-list>
    </item>
</selector>